<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image"
                android:layout_toRightOf="@+id/image"
                android:text="처음으로 가기"
                android:textColor="#0000ff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/plantname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@+id/image"
                android:text="식물 이름 :"
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textColor="#000000"
                android:textSize="19dp"
                android:layout_toRightOf="@+id/plantname"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="22dp"/>

            <TextView
                android:id="@+id/plantinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plantname"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@+id/image"
                android:text="식물 설명"
                android:textColor="#000000"
                android:textSize="17dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="630dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="feature"
                    android:textColor="#888888"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/tv_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="management"
                    android:textColor="#888888"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_feature"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="notice"
                    android:textColor="#888888"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_management"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

